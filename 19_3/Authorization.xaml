<Window x:Class="_19_3.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_19_3"
        mc:Ignorable="d"
        Title="Authorization"  Height="210" Width="200" ResizeMode="NoResize" Loaded="Window_Loaded">
    <StackPanel >
        <Label Content="Логин" Margin="3"></Label>
        <TextBox x:Name="tbLoginInput" Margin="3"></TextBox>
        <Label Content="Пароль" Margin="3"></Label>
        <PasswordBox x:Name="pbPassInput" Margin="3"></PasswordBox>
        <Button Content="Войти" IsDefault="True" Click="AuthAttempt" Margin="3"></Button>
        <Button Content="Отмена" Click="Exit" Margin="3"></Button>
    </StackPanel>

</Window>